<li class="gallery__card list" >
  <article id={{id}}>      
    <div class="gallery__card-thumb">
          <img
            class="gallery__image"
            src='https://image.tmdb.org/t/p/w500{{poster_path}}'
            alt='{{original_title}}'
          />
    </div>
    <div class="gallery__card-caption">
      <h2 class="gallery__title">{{original_title}}</h2>
      <p class="gallery__text"> {{filmGenry}}
        <span class="gallery__text">| {{changedYear}}</span>
        <span class="gallery__card-rating">{{vote_average}}</span>
      </p>
     </div>
  </article>   
</li>
  